{
  "name": "@cognotate/db",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "module": "index.ts",
  "scripts": {
    "build": "bun build index.ts --outdir ./dist",
    "db:gen": "bunx --bun prisma generate",
    "db:push": "bunx --bun prisma db push",
    "db:push:force": "bunx --bun prisma db push --force-reset",
    "db:pull": "bunx --bun prisma db pull",
    "db:seed": "bunx --bun prisma db seed",
    "db:studio": "bunx --bun prisma studio",
    "db:migrate:dev": "bunx --bun prisma migrate dev",
    "db:migrate:deploy": "bunx --bun prisma migrate deploy",
    "db:migrate:reset": "bunx --bun prisma migrate reset"
  },
  "devDependencies": {
    "@types/bun": "catalog:types",
    "prisma": "^7.3.0"
  },
  "peerDependencies": {
    "typescript": "catalog:types"
  },
  "dependencies": {
    "@cognotate/config": "workspace:*",
    "@prisma/adapter-libsql": "^7.3.0",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0"
  }
}
